@model List<UserDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Kullanıcı Yönetimi /</span>
        Kullanıcılar
    </h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">
                Kullanıcı Ekle <i class="bx bx-plus"></i>
            </a>
            <table class="table table-bordered" id="usersTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Rol</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Role</td>
                            <td>@(item.EmailConfirmed ? "Bu Bizden Sorun Yok" : "Kaçakk")</td>
                            <td>@item.AccesFailedCount</td>
                            <td>
                                <a class="btn btn-primary btn-sn" data-id="@item.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@item.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sn" data-id="@item.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@item.Id"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>

@section ForTr {
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}